<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>farm</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:applicationContext.xml
		</param-value>
	</context-param>
	
	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>

	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>	

	<!-- used by WICKET -->
	<context-param>
		<param-name>configuration</param-name>
		<param-value>DEVELOPMENT</param-value>
	</context-param>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>farm.root</param-value>
	</context-param>

	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>



 
 	
 	<filter>
        <filter-name>opensessioninview</filter-name>
        <filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
    </filter>
 
	<filter>
		<filter-name>wicket.farm</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationFactoryClassName</param-name>
			<param-value>
				org.apache.wicket.spring.SpringWebApplicationFactory
			</param-value>
		</init-param>
		<init-param>
	        <param-name>applicationBean</param-name>
	        <param-value>farmApplication</param-value>
    	</init-param>
		<init-param>
			<param-name>paginationSize</param-name>
			<param-value>20</param-value>
		</init-param>
		<init-param>
			<param-name>summary_paginationSize</param-name>
			<param-value>5</param-value>
		</init-param>
		<init-param>
			<param-name>Heafer</param-name>
			<param-value>Heifer</param-value>
		</init-param>
		<init-param>
			<param-name>Herd</param-name>
			<param-value>Herd</param-value>
		</init-param>
		<init-param>
			<param-name>Calf</param-name>
			<param-value>Calf</param-value>
		</init-param>
		<init-param>
			<param-name>auto-reproduce</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>milking-status-non-milking</param-name>
			<param-value>Non-Milking</param-value>
		</init-param>
		<init-param>
			<param-name>LS_CODE_PREFIX</param-name>
			<param-value>MD</param-value>
		</init-param>		
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	
	<filter-mapping>
        <filter-name>opensessioninview</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

	<filter-mapping>
		<filter-name>wicket.farm</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>	
	
	<session-config>
        <session-timeout>30</session-timeout>
    </session-config>

